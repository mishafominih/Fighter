<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFA979"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/pattern_head_in"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fon">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Платформа для проведения соревнований"
            android:textSize="25dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Провести соревнование с нами быстро и легко!"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_enter"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_text_main_code_to_join"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:hint="Введите код для присоединения"
                android:textSize="15dp"/>

            <ImageView
                android:id="@+id/image_join_to_tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:srcCompat="@drawable/mask_group" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>